<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/mainActivity"

	>

	<include layout="@layout/discovery_web_view"/>
	<include layout="@layout/auth_web_view"/>

    <TextView
        android:id="@+id/startText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/start_text" />

    <LinearLayout
        android:id="@+id/servicesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/startText"
        android:layout_above="@+id/statusContainer"
        android:background="#dcdcdc"
        android:orientation="vertical" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
		        android:id="@+id/labelOperatorID"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="0dp"
		        android:textStyle="bold"
		        android:text="@string/labelOperatorID"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
            <Button
		        android:id="@+id/startOperatorId"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginBottom="5dp"
		        android:onClick="startOperatorId"
		        android:text="@string/startOperatorId" />
		</LinearLayout>

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
		</LinearLayout>

		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
		</LinearLayout>	    
	    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#dcdcdc"
        android:orientation="vertical" >

        <TextView
		        android:id="@+id/informationIntro"
		        android:layout_width="130dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="5dp"
		        android:text="@string/informationIntro"
		        android:textAppearance="?android:attr/textAppearanceMedium" 
		        android:textStyle="bold"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
        	<TextView
		        android:id="@+id/promptDiscoveryStatus"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="5dp"
		        android:textStyle="bold"
		        android:text="@string/promptDiscoveryStatus"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		
		    <TextView
		        android:id="@+id/valueDiscoveryStatus"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"        
		        android:text="@string/discoveryStatusUnknown"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
        	<TextView
		        android:id="@+id/promptStatus"
		        android:layout_width="80dp"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="5dp"
		        android:textStyle="bold"
		        android:text="@string/promptStatus"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		
		    <TextView
		        android:id="@+id/valueStatus"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"        
		        android:text="@string/valueStatus"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
	
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        
		    <TextView 
		        android:id="@+id/promptMCC"
		        android:layout_height="wrap_content"
		        android:layout_width="80dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="5dp"   
		        android:textStyle="bold"     
		        android:text="@string/promptMCC"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <TextView
		        android:id="@+id/valueMCC"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"        
		        android:layout_marginLeft="10dp"
		        android:text="@string/valueMCC"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		    
		</LinearLayout>
	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">
            
		    <TextView
		        android:id="@+id/promptMNC"
		        android:layout_height="wrap_content"
		        android:layout_width="80dp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginTop="5dp"  
		        android:textStyle="bold"      
		        android:text="@string/promptMNC"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		    <TextView
		        android:id="@+id/valueMNC"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dp"        
		        android:layout_marginLeft="10dp"
		        android:text="@string/valueMNC"
		        android:textAppearance="?android:attr/textAppearanceMedium" />
		</LinearLayout>
    
    </LinearLayout>
    
    
    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:onClick="startSettings"
        android:text="@string/settingsButton" />

    <Button
        android:id="@+id/discoveryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:onClick="handleDiscovery"
        android:text="@string/discoveryButton" />

</RelativeLayout>